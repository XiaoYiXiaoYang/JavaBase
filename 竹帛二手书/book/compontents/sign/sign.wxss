.sign {
 display: inline-block;
 font-size: 12px;
 vertical-align: middle;
 line-height: 19px;
 -webkit-transform: scale(0.83);
 transform: scale(0.83);
}

.sign__left, .sign__right {
 display: inline-block;
 line-height: 17px;
 height: 19px;
 vertical-align: middle;
 box-sizing: border-box;
}

.sign__left {
 padding: 0 2px;
 color: #fff;
 background: #999;
 border-radius: 2px 0 0 2px;
 border: 1rpx solid #999;
}

.sign__right {
 padding: 0 5px;
 color: #999;
 border-radius: 0 2px 2px 0;
 border: 1rpx solid #999;
}

.sign--danger .sign__left {
 color: #fff;
 background: #f24544;
 border-color: #f24544;
}

.sign--danger .sign__right {
 color: #f24544;
 border-color: #f24544;
}
