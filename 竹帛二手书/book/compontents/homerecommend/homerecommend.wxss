.homeRecommend {
  font-size: 30rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  color: #293539;
  font-weight: 300;
  position: relative;
  text-align: center;
}
.homeMark{
  margin-left: 50rpx;
  color: #293539;
  font-size: 36rpx;
  margin-top: 10rpx;
  text-align: center;
  width: 350rpx;
  border-bottom: 1rpx solid #a78845;
}
.homeSwiper swiper {
  width: 100%;
  height: 800rpx;
}
.swiperBox image{
  width: 100%;
  height: 520rpx;
  background-color: #f5f5f5;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.swiperBox{
  width: 520rpx;
  margin: 0 auto;
  position: relative;
  height: 700rpx;
  box-shadow: 0px 10rpx 30rpx 0px #cfc9ca;
  margin-top: 40rpx;
  border-radius: 20rpx;
}
.swiperDetail{
  position: absolute;
  width: 100%;
  height: 200rpx;
  top: 520rpx;
  background-color: #fff;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.swiperDetail .title{
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 32rpx;
  margin-left: 35rpx;
  color: #293539;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.allPrice{
  width: 90%;
  display: flex;
  flex-direction: wrap;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.allPrice .price{
  width: 50%;
  font-size: 30rpx;
}

.allPrice .prePrice {
  width: 50%;
  text-decoration: line-through;
  font-size: 30rpx;
  color: #999;
}

.swiper-box-info .introduction {
  font-size: 24rpx;
  color: #a78845;
}
