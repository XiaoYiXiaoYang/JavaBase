/*全部*/
.section {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}
.section .header {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  height: 130rpx;
}

.section .header .title {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  background-color: #FF6600;
  height: 75rpx;
}

.section .header .txt {
  padding-left: 50rpx;
  padding-right: 50rpx;
  height: 75rpx;
  color: #fff;
  font-size: 33rpx;
}
.body {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  position: relative;
}
.section .body .item {
  border-top: 1px solid #d9d9d9;
  margin: 0 20rpx;
  height: 244rpx;
  width: 710rpx;
}
.section .body .image{
  margin-top: 12rpx;
  margin-right: 12rpx;
  float: left;
  width: 220rpx;
  height: 220rpx;
}
.detail{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow: hidden;
}
.detailHeader{
  display: flex;
  flex-direction: wrap;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.title{
  width: 40%;
  color: #333;
  line-height: 50rpx;
  font-size: 30rpx;
}

.signBox {
  padding-right: 20rpx;
  padding-top: 8rpx;
  margin: 10rpx;
}
.sign{
  margin-left: 10px;
}
.author{
  width: 476rpx;
  color: rgb(41, 40, 40);
  line-height: 50rpx;
  font-size: 25rpx;
}
.section .body .allPrice {
  width: 476rpx;
  display: flex;
  color: #b4282d;
  line-height: 50rpx;
  font-size: 33rpx;
}

.section .body .prePrice {
  text-decoration: line-through;
  font-size: 28rpx;
  color: #999;
}

.section .body .price {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #a78845;
}

